<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thruster1">

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="FULL"
        android:id="@+id/bow_full"
        android:background="@drawable/layout_rounded_buttons"
        android:layout_marginTop="132dp"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bow_half"
        android:layout_toStartOf="@+id/bow_half" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="HALF"
        android:id="@+id/bow_half"
        android:background="@drawable/layout_rounded_buttons"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="STOP"
        android:id="@+id/bow_stop"
        android:background="@drawable/layout_rounded_yellow"
        android:layout_alignTop="@+id/bow_half_green"
        android:layout_toRightOf="@+id/bow_half"
        android:layout_toEndOf="@+id/bow_half"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOW"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2"
        android:layout_marginRight="205dp"
        android:layout_marginEnd="205dp"
        android:layout_alignBottom="@+id/bow_full"
        android:layout_toLeftOf="@+id/bow_full"
        android:layout_toStartOf="@+id/bow_full" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="HALF"
        android:id="@+id/bow_half_green"
        android:background="@drawable/layout_rounded_green"
        android:layout_alignTop="@+id/bow_full_green"
        android:layout_toLeftOf="@+id/bow_full_green"
        android:layout_toStartOf="@+id/bow_full_green"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="FULL"
        android:id="@+id/bow_full_green"
        android:background="@drawable/layout_rounded_green"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="281dp"
        android:layout_marginEnd="281dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="STOP"
        android:id="@+id/motors_stop"
        android:background="@drawable/layout_rounded_buttons"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="122dp"
        android:layout_marginStart="122dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="35sp"
        android:text="MOTORS"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bow_stop"
        android:layout_toStartOf="@+id/bow_stop" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="START"
        android:background="@drawable/layout_rounded_green"
        android:id="@+id/motors_start"
        android:layout_alignTop="@+id/textView3"
        android:layout_toLeftOf="@+id/bow_full_green"
        android:layout_toStartOf="@+id/bow_full_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STERN"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView4"
        android:layout_marginTop="132dp"
        android:layout_below="@+id/motors_stop"
        android:layout_alignRight="@+id/motors_stop"
        android:layout_alignEnd="@+id/motors_stop" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/layout_rounded_buttons"
        android:text="FULL"
        android:id="@+id/stern_full"
        android:layout_alignTop="@+id/stern_half"
        android:layout_toLeftOf="@+id/bow_full"
        android:layout_toStartOf="@+id/bow_full" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="HALF"
        android:background="@drawable/layout_rounded_buttons"
        android:id="@+id/stern_half"
        android:layout_alignTop="@+id/stern_stop"
        android:layout_toLeftOf="@+id/bow_half"
        android:layout_toStartOf="@+id/bow_half" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="STOP"
        android:background="@drawable/layout_rounded_yellow"
        android:hapticFeedbackEnabled="true"
        android:id="@+id/stern_stop"
        android:layout_alignTop="@+id/stern_half_green"
        android:layout_alignLeft="@+id/bow_stop"
        android:layout_alignStart="@+id/bow_stop" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="HALF"
        android:background="@drawable/layout_rounded_green"
        android:id="@+id/stern_half_green"
        android:layout_alignTop="@+id/stern_full_green"
        android:layout_alignLeft="@+id/bow_half_green"
        android:layout_alignStart="@+id/bow_half_green" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="FULL"
        android:background="@drawable/layout_rounded_green"
        android:id="@+id/stern_full_green"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/bow_full_green"
        android:layout_alignStart="@+id/bow_full_green" />


</RelativeLayout>